<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBookActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_gravity="center"
                android:layout_marginLeft="9sp"
                app:srcCompat="@drawable/add_book_19_1110422" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="Naslov knjige"
                android:textColor="#020202"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inputNaslov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp"
                android:ems="10"
                android:hint="Upisite naslov knjige"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="Kategorija"
                android:textColor="#020202"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inputKategorija"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp"
                android:ems="10"
                android:hint="Upisite kategoriju knjige"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="Ime i prezime autora"
                android:textColor="#020202"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inputImePrezimeAutora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp"
                android:ems="10"
                android:hint="Upisite ime i prezime autora"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="Kratak opis"
                android:textColor="#020202"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inputExcerpt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Unesite kratak opis"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="Link slike knjige"
                android:textColor="#020202"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inputImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Unesite link na kome se nalazi slika knjige"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/btnSacuvaj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Sacuvaj podatke" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>